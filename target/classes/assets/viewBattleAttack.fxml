                        <!-- Panel de Pokémon del Jugador -->
            
                        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="79.0" prefWidth="205.0" spacing="5.0" style="-fx-border-radius: 5; -fx-border-color: black; -fx-background-color: #ede7ab;">
            
                            <Label fx:id="playerPokemonLabel" style="-fx-text-fill: black; -fx-font-weight: bold;" text="Moltres  Lv19" />
            
                            <HBox alignment="CENTER" spacing="5">
            
