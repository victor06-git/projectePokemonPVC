               </VBox>
               <VBox prefHeight="200.0" prefWidth="100.0">
                  <children>
                  
                        <ImageView fx:id="enemyPokemonImage" fitHeight="101.0" fitWidth="111.0" preserveRatio="true" />
                  </children>
               </VBox>
            </children>
            <padding>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
         </HBox>
         <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
            <children>
               <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="111.0" prefWidth="233.0" spacing="10.0">
